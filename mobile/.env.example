# StockTake Mobile App Environment Configuration
# Copy this file to .env and update the values

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3005
EXPO_PUBLIC_API_TIMEOUT=10000

# Application Configuration
EXPO_PUBLIC_APP_NAME=StockTake Mobile
EXPO_PUBLIC_APP_VERSION=2.0.0
EXPO_PUBLIC_APP_ENVIRONMENT=development

# Authentication Configuration
EXPO_PUBLIC_JWT_STORAGE_KEY=auth-storage
EXPO_PUBLIC_SESSION_TIMEOUT=86400000

# Scanner Configuration
EXPO_PUBLIC_ENABLE_BARCODE_SCANNER=true
EXPO_PUBLIC_ENABLE_RFID_SCANNER=true
EXPO_PUBLIC_SCANNER_TIMEOUT=30000

# Offline Configuration
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_OFFLINE_SYNC_INTERVAL=300000
EXPO_PUBLIC_MAX_OFFLINE_ITEMS=1000

# UI Configuration
EXPO_PUBLIC_THEME=light
EXPO_PUBLIC_PRIMARY_COLOR=blue
EXPO_PUBLIC_SECONDARY_COLOR=gray

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_REPORTS=true
EXPO_PUBLIC_ENABLE_USER_PROFILE=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development Configuration
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info

# Camera Configuration
EXPO_PUBLIC_CAMERA_QUALITY=high
EXPO_PUBLIC_CAMERA_FLASH_MODE=auto

# External Services (for future use)
# EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
# EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn
# EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Push Notifications (for future use)
# EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true
# EXPO_PUBLIC_FCM_SERVER_KEY=your-fcm-key

# File Upload Configuration (for future use)
# EXPO_PUBLIC_MAX_FILE_SIZE=10485760
# EXPO_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
