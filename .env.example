# StockTake Project v2 - Root Environment Configuration
# Copy this file to .env and update the values

# Project Configuration
PROJECT_NAME=StockTake Project v2
PROJECT_VERSION=2.0.0
PROJECT_ENVIRONMENT=development

# Port Configuration
API_PORT=3005
ADMIN_PORT=3006
MOBILE_PORT=19006

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/stocktake_db
# REDIS_URL=redis://localhost:6379

# External Services
# GOOGLE_ANALYTICS_ID=your-ga-id
# SENTRY_DSN=your-sentry-dsn
# MIXPANEL_TOKEN=your-mixpanel-token

# Security
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# ENCRYPTION_KEY=your-encryption-key

# Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Storage (for future use)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket

# Monitoring (for future use)
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
# DATADOG_API_KEY=your-datadog-key

# Development Tools
# DEBUG_MODE=true
# LOG_LEVEL=debug
# ENABLE_HOT_RELOAD=true
